# ─────────────────────────────────────────────────────────────────────────────
# poserForge — environment defaults
# Copy this file or override values in the shell before running docker compose.
# ─────────────────────────────────────────────────────────────────────────────

# Project identity
PROJECT_NAME=myproject
IMAGE_TAG=latest

# Developer user inside the container.
# Match these to your host UID/GID to avoid permission issues with bind mounts.
# Run: id -u   and   id -g   to find your host values.
DEV_USER=dev
DEV_UID=1000
DEV_GID=1000

# Source directory to bind-mount into /workspace.
# Use '.' for the repo root (default) or an absolute path.
SOURCE_DIR=.

# Node environment
NODE_ENV=development

# Resource limits for the dev container
CPU_LIMIT=4
MEM_LIMIT=4g
